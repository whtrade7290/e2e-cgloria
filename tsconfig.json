{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@tests/*": ["src/tests/*"]
    }
  },
  "include": ["playwright.config.ts", "tests/**/*.ts", "src/**/*.ts"],
  "exclude": [
    "node_modules", // 라이브러리 제외
    "dist" // 빌드 결과물 제외
  ]
}
